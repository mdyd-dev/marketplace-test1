---
slug: products
method: post
---
{% liquid
  assign changeset = '{ "errors": {}, "payload": {}, "model": null }' | parse_json
  render 'products/create', changeset: changeset, params: context.params

  if changeset.errors.size == 0
    echo 'TODO: redirect_to /products/' | append: changeset.model.id
  else
    render 'theme/products/form', changeset: changeset
  endif
%}
